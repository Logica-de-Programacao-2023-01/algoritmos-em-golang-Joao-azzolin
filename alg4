package main

import "fmt"

func main() {
	var número1, número2, número3 float64
	fmt.Print("Digite sua primeira nota:")
	fmt.Scan(&número1)
	fmt.Print("Digite sua segunda nota:")
	fmt.Scan(&número2)
	fmt.Print("Digite sua terceira nota:")
	fmt.Scan(&número3)
	média_ponderada = (numero1 * 2, número2 * 3, número3 * 3) / 10
	fmt.Println("A média ponderada será:", média_ponderada)
	}
